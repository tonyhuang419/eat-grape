<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
    "http://struts.apache.org/dtds/struts-2.1.dtd">

<struts>
	<!-- Constants -->
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.action.extension" value="htm" />
	<constant name="struts.serve.static" value="true" />
	<constant name="struts.enable.DynamicMethodInvocation" value="true" />
	<constant name="struts.serve.static.browserCache" value="false" />
	<constant name="struts.multipart.maxSize" value="1002097152" />
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.enable.SlashesInActionNames" value="true" />
	
	<!-- *** Struts2优化Constants *** -->
	<constant name="struts.freemarker.templatesCache" value="true" />
	<constant name="struts.configuration.xml.reload" value="true" />
	
	<!-- 国际化资源文件 -->
	<constant name="struts.custom.i18n.resources" value="upload"/>
	
	<constant name="struts.velocity.configfile" value="/WEB-INF/cnf/velocity.properties"></constant>
	<constant name="struts.velocity.toolboxlocation" value="/WEB-INF/cnf/velocity-toolbox.xml"></constant>
	
		
	<!-- 前台相关配置 -->
	<include file="struts-front.xml"></include>
	
	<!-- 后台管理配置 -->
	<include file="struts-admin.xml"></include>
	
	
</struts>
