<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
    "http://struts.apache.org/dtds/struts-2.1.dtd">

<struts>
	<!-- Constants -->
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.action.extension" value="htm" />
	<constant name="struts.serve.static" value="true" />
	<constant name="struts.enable.DynamicMethodInvocation" value="true" />
	<constant name="struts.serve.static.browserCache" value="false" />
	<constant name="struts.multipart.maxSize" value="1002097152" />
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.enable.SlashesInActionNames" value="true" />
	
	<!-- *** Struts2优化Constants *** -->
	<constant name="struts.freemarker.templatesCache" value="true" />
	<constant name="struts.configuration.xml.reload" value="true" />
	
	<!-- 提供json 格式的支持  -->
	<package name="default" extends="json-default">
		<interceptors>
			<interceptor name="sessionInterceptor" class="com.eatle.web.interceptor.SessionInterceptor" />
			<interceptor name="permissionInterceptor" class="com.eatle.web.interceptor.PermissionInterceptor" />
			<interceptor-stack name="baseInterceptorStack">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="sessionInterceptor" />
				<interceptor-ref name="permissionInterceptor" />
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="baseInterceptorStack" />
		<global-results>
			<result name="timeout" type="redirect">/timeout.jsp</result>
			<result name="nopower" type="redirect">/home.htm</result>
		</global-results>
	</package>
	
	<!-- 登陆首页 -->
	<include file="res/struts/struts-index.xml"></include>
	<!-- 系统管理 -->
	<include file="res/struts/struts-system.xml"></include>
	<!-- 业务数据 -->
	<include file="res/struts/struts-business.xml"></include>
	
</struts>
