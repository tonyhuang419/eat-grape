<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!-- 登陆首页 -->
	<package name="login" extends="json-default" namespace="/">
		<action name="login" class="com.eatle.web.action.LoginAction" method="login">
			<result type="json">
				<param name="ignoreHierarchy">false</param>
				<param name="includeProperties">resultMap.*</param>
			</result>
		</action>
	</package>
	<package name="aboutlogin" extends="struts-default" namespace="/">
		<!-- 获取登陆页面 -->
		<action name="index" class="com.eatle.web.action.LoginAction">
			<result name="input">/WEB-INF/jsp/login.jsp</result>
		</action>
		<!-- 退出 -->
		<action name="loginout" class="com.eatle.web.action.LoginAction" method="loginOut">
			<result name="input" type="redirect">index.htm</result>
		</action>
		<!--  验证码 -->
		<action name="verifycode" class="com.eatle.web.action.VerifyCodeAction">
			<result type="stream">
				<param name="contentType">image/jpg</param>
				<param name="inputName">verifyCode</param>
				<param name="contentDisposition">filename="verifycode.jpg"</param>
			</result>
		</action>
	</package>
	
	<!-- 首页展示 -->
	<package name="index" extends="my-struts-default" namespace="/">
		<action name="home" class="com.eatle.web.action.IndexAction" method="index">
			<result>/WEB-INF/jsp/index.jsp</result>
		</action>
	</package>
	
</struts>